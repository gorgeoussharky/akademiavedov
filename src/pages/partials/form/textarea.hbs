<div class="{{class}} textarea">
    <div class="textarea__wrap">
        {{#uid label placeholder name type options }}
            <label for="{{id}}" class="textarea__label">
                {{label}}
            </label>
            <textarea
                class="textarea__control"
                id="{{id}}"
                name="{{name}}"
                placeholder="{{placeholder}}"
                rows="4"
            ></textarea>
        {{/uid}}
    </div>
</div>